<% require 'colorscheme'
dark = ColorScheme.dark
gui_scaling_factor = @facts['scaling'] ? @facts['scaling']['gui'] : 1
text_scaling_factor = @facts['scaling'] ? @facts['scaling']['text'] : 1
scaling_ratio = text_scaling_factor / gui_scaling_factor
-%>
term=foot-powerline
font=monospace:size=<%= (9 * scaling_ratio).round(2) %>
dpi-aware=no
pad=2x2

[scrollback]
multiplier=1

[cursor]
color=<%= dark.background.hex %> <%= dark.cursor.hex %>

[colors]
foreground=<%= dark.foreground.hex %>
background=<%= dark.background.hex %>
regular0=<%= dark.terminal[0].hex %>
regular1=<%= dark.terminal[1].hex %>
regular2=<%= dark.terminal[2].hex %>
regular3=<%= dark.terminal[3].hex %>
regular4=<%= dark.terminal[4].hex %>
regular5=<%= dark.terminal[5].hex %>
regular6=<%= dark.terminal[6].hex %>
regular7=<%= dark.terminal[7].hex %>
bright0=<%= dark.terminal[8].hex %>
bright1=<%= dark.terminal[9].hex %>
bright2=<%= dark.terminal[10].hex %>
bright3=<%= dark.terminal[11].hex %>
bright4=<%= dark.terminal[12].hex %>
bright5=<%= dark.terminal[13].hex %>
bright6=<%= dark.terminal[14].hex %>
bright7=<%= dark.terminal[15].hex %>

[key-bindings]
clipboard-copy=Control+Mod1+c
clipboard-paste=Control+Mod1+v

